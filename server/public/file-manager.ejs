<div class="row">
	<div class="col-2">
		<ul class="list-group">
		  <h5>Json (<%- filejson.length%>)</h5>
		  <% filejson.forEach(function(data, index){ %>
		  	<li class="list-group-item" aria-current="true"><a href="?files=json/<%=data%>">json/<%=data%></a></li>
		  <% }); %>

		  <h5>Components (<%- components.length%>)</h5>
		  <% components.forEach(function(data, index){ %>
		  	<li class="list-group-item" aria-current="true"><a href="?files=apps/components/<%=data%>">components/<%=data%></a></li>
		  <% }); %>

		  <h5>Layout (<%- filelayout.length%>)</h5>
		  <% filelayout.forEach(function(data, index){ %>
		  	<li class="list-group-item" aria-current="true"><a href="?files=apps/layout/<%=data%>">layout/<%=data%></a></li>
		  <% }); %>
		  <li class="list-group-item" aria-current="true"><a href="?files=apps/index.ejs">Index </a></li>
		</ul>
	</div>
	<div class="col-10">
		File Name
		<form action="/files" method="post">
		<div class="row">
			<div class="col-10">
				<input type="text" name="name" class="form-control" value="<%- files%>">
			</div>
			<div class="col-2">
				<button type="submit" class="btn btn-md btn-primary">Submit</button>
			</div>
		</div>
		<br>
		<textarea class="form-control" name="code" style="min-height:650px;" id="code"><%- text%></textarea>
		</form>
	</div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.62.3/codemirror.min.js" integrity="sha512-hGVnilhYD74EGnPbzyvje74/Urjrg5LSNGx0ARG1Ucqyiaz+lFvtsXk/1jCwT9/giXP0qoXSlVDjxNxjLvmqAw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

