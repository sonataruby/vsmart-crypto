<h4>Airdrop Telegram </h4>
<hr>
	<form action="/dapp/airdrop" method="post">
		<div class="mb-3 row">
		    <label  class="col-sm-2 col-form-label">Name</label>
		    <div class="col-sm-10">
		      <input type="text" name="name" class="form-control" value="">
		    </div>
		</div>
		<div class="mb-3 row">
		    <label  class="col-sm-2 col-form-label">Contents</label>
		    <div class="col-sm-10">
		      <textarea type="text" style="height:450px;" name="code" class="form-control" id="summernote"></textarea>
		    </div>
		</div>
		<div class="mb-3 row">
		    <label  class="col-sm-2 col-form-label"></label>
		    <div class="col-sm-10">
		      <button type="submit" class="btn btn-primary" value="">Send Data</button>
		    </div>
		</div>
	</form>
<table class="table table-border">
<% items.forEach(function(data, index){ %>
	<tr>
		<td style="width:50px;"><%= data.id%></td>
		<td><%= data.name%></td>
		<td class="text-end"><a class="btn btn-sm btn-primary" href="/dapp/airdrop/send/<%=data.id%>">Send</a></td>
	</tr>
<%})%>
</table>


<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script>
$(document).ready(function() {
  $('#summernote').summernote({
  	toolbar: [
          
          ['font', ['bold', 'underline', 'clear']],
          ['color', ['color']],
          ['insert', ['link', 'picture', 'video']],
          ['view', ['fullscreen', 'codeview']]
        ]
  });
});
</script>