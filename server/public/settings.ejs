<div class="row">
			<div class="col-md-12">

				

				<h4>Settings <a href="" class="btn btn-sm btn-info">Build All</a></h4>
				<hr>
					<form action="/settings/create" method="post">

						<div class="mb-3 row">
						    <label  class="col-sm-2 col-form-label">Site Name</label>
						    <div class="col-sm-10">
						      <input type="text" name="name" class="form-control" value="">
						    </div>
						</div>

						<div class="mb-3 row">
						    <label  class="col-sm-2 col-form-label">Site Logo 1</label>
						    <div class="col-sm-10">
						      <input type="file" id="logo1" data-name="logo" data-width="306" data-height="88" class="form-control" value="">
						    </div>
						</div>

						<div class="mb-3 row">
						    <label  class="col-sm-2 col-form-label">Site Logo 2</label>
						    <div class="col-sm-10">
						      <input type="file" id="logo2" data-name="logo-white" data-width="306" data-height="88" class="form-control" value="">
						    </div>
						</div>


						<div class="mb-3 row">
						    <label  class="col-sm-2 col-form-label">Site Icon</label>
						    <div class="col-sm-10">
						      <input type="file" id="icon" data-name="icon" name="icon" class="form-control" value="">
						    </div>
						</div>

						<div class="mb-3 row">
						    <label  class="col-sm-2 col-form-label">Site Banner</label>
						    <div class="col-sm-10">
						      <input type="file" id="banner" name="banner" data-name="banner" data-width="1183" data-height="588" class="form-control" value="">
						    </div>
						</div>

						<div class="mb-3 row">
						    <label  class="col-sm-2 col-form-label">Site Description</label>
						    <div class="col-sm-10">
						      <textarea type="text" name="code" class="form-control" value=""></textarea>
						    </div>
						</div>
						
						<div class="mb-3 row">
						    <label  class="col-sm-2 col-form-label">Site Keyword</label>
						    <div class="col-sm-10">
						      <textarea type="text" name="code" class="form-control" value=""></textarea>
						    </div>
						</div>

					</form>
				</form>
				
			</div>
</div>


<script>
    
    $("input#banner").on("change",function(){
    	$(this).upload(this);
    });

      
    $("input#icon").on("change",function(){
       
        var file = this.files[0];

        var formData=new FormData();
        
        formData.append('filesfld',file);
        
        var src=file.name;
        var formart=src.split(".").pop();
        var fileName = $(this).data("name")+'.'+formart;
        var width = $(this).data("width");
        var height = $(this).data("height");

        formData.append('fileName',fileName);
        formData.append('width',width);
        formData.append('height',height);

        formData.append('genIcon',true);
        

        if(formart=="jpg" || formart=="png" || formart=="gif" || formart=="jpge"){
        	$.ajax({
            url: '/upload',
            type: 'POST',
            data: formData,
            cache: false,
            contentType: false,
            processData: false,
            success: function(data){
            	console.log(data);
            }
            });
        }
    });
</script>
