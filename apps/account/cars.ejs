
<div class="row">
	
	<div class="col-12 col-sm-7">

		<h5 class="d-flex justify-content-between">Update CAR Lever <button class="btn btn-info" data-carslever="true">Up Lever</button></h5>
		<hr>
	    <div class="row">
	        <div class="col-3">
	          CAR <span id="FocusCarUpID"></span>
	          <div class="border" id="carslibs2" style="min-height:100px;" data-bs-toggle="modal" data-bs-target="#ExpLibsCars"></div>
	        </div>
	        <div class="col-3">
	          Item EXP
	          <div class="border" style="min-height:100px;" id="exptoken3" data-bs-toggle="modal" data-bs-target="#ExpLibsItems" >
	          		
	          </div>
	        </div>
	        <div class="col-1">=</div>
	        <div class="col-5">
	            New CAR
	            <div class="border" style="min-height:100px;">
	              New CAR = CAR 1 + Item EXP
	            </div>
	        </div>
	        
	    </div>
	    <b>Update Lever Table</b>
	    <table class="table">
		  <thead>
		    <tr>
		      <th scope="col">#</th>
		      <th scope="col">Exp</th>
		      <th scope="col">Sell System</th>
		    </tr>
		  </thead>
		  <tbody>
		  
		  	<% getLever.forEach(function(data, index){ %>
		    <tr>
		      <th scope="row">Lever <%=index+1%></th>
		      <td><%=data.Exp%></td>
		      <td><%- data.Exp >= 12000 ? "Yes" : "No" %></td>
		      
		    </tr>
		     <%});%>
		  </tbody>
		</table>
	</div>



	<div class="col-12 col-sm-5">
		<div style="max-height:400px;">
			<div class="row" id="carslibs">
	          <% items.forEach(function(data, index){ %>
	            
	              <div class="col-6 col-sm-4 mb-4">
	                <div class="border p-3">
	                  <img src="<%=data.image%>" class="itemFocus" data-tokenid="<%=data.id%>" style="width:100%" data-json="<%= JSON.stringify(data.options)%>">
	                  
	                </div>
	                <span><%=data.name%></span><br>
	                <button class="btn btn-primary btn-sm tranferid" data-tokenid="<%=data.id%>" data-toggle="modal" data-target="#transferWallet" type="button">Transfer</button>
	                <button class="btn btn-sm btn-primary" data-tokenid="<%=data.id%>" type="button" data-target="#sellItemsCars" data-toggle="modal">Sell</button>
	              </div>
	              
	           
	          <%});%>
	        </div>
        </div>
	</div>

</div>


<br>




<div class="row">
    <div class="col-12 col-sm-6">
        <div class="border" style="min-height:320px;">
          <img src="/assets/car/noimage.png" id="fImage" style="width:100%;">
        </div>
        
        
    </div>
    <div class="col-12 col-sm-6">
        <ul class="list-group list-group-flush">
          <li class="list-group-item border-bottom">Token ID : #<span class="stokenid"></span></li>
          <li class="list-group-item border-bottom">Name : <span class="sname"></span></li>
          <li class="list-group-item border-bottom">Lever : <span class="sLever"></span></li>
          <li class="list-group-item border-bottom">Models : <span class="sModels"></span></li>
          <li class="list-group-item border-bottom">Power : <span class="sPower"></span></li>
          <li class="list-group-item border-bottom">Speed : <span class="sSpeed"></span></li>
          <li class="list-group-item border-bottom">Acceleraction : <span class="sAcceleraction"></span></li>
          <li class="list-group-item border-bottom">Handing : <span class="sHanding"></span></li>
          <li class="list-group-item border-bottom">Nitro : <span class="sNitro"></span></li>
          <li class="list-group-item border-bottom">Exp : <span class="sExp"></span></li>
        </ul>
    </div>

 </div>


<!-- Modal -->
<div class="modal fade" id="ExpLibsItems" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Select Exp Items</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        	<div class="row" id="carslibs">
	          <% getExp.forEach(function(data, index){ %>
	            
	              <div class="col-6 col-sm-4 mb-4">
	                <div class="border p-3">
	                  <img src="<%=data.image%>" class="itemFocusExp" data-tokenid="<%=data.tokenId%>"  style="width:100%">
	                  
	                </div>
	                <span><%=data.exp%> exp</span>
	                
	              </div>
	              
	           
	          <%});%>
	        </div>
      </div>
      
    </div>
  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="ExpLibsCars" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabelEXP">Select Exp Items</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        	<div class="row" id="carslibs">
	          <% items.forEach(function(data, index){ %>
	            
	              <div class="col-6 col-sm-4 mb-4">
	                <div class="border p-3">
	                  <img src="<%=data.image%>" class="itemFocusCars" data-tokenid="<%=data.id%>" style="width:100%">
	                  
	                </div>
	                <span>Token ID : <%=data.id%></span>
	                
	              </div>
	              
	           
	          <%});%>
	        </div>
      </div>
      
    </div>
  </div>
</div>



<div class="modal fade" id="transferWallet"  data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabelCAR">NFT Transfer</h5>
        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
          
        </button>
      </div>
      <div class="modal-body">
        <p>Enter Wallet Transfer</p>
        <input type="text" id="TransferNftWallet" class="form-control" placeholder="Wallet Transfer" >
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button"  class="btn btn-primary confirmtranfer" data-tokenid="0" data-nft-transfer="true">Confirm</button>
      </div>
    </div>
  </div>
</div>



<div class="modal fade" id="sellItemsCars"  data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabelCARSell">NFT Sell Markets</h5>
        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Price</p>
        <input type="number"  class="form-control price" placeholder="Price" >
        <p>Description</p>
        <textarea class="form-control description"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button"  class="btn btn-primary marketsell" data-market-sell data-tokenid="0" data-contract="<%=contract%>">Send Market</button>
      </div>
    </div>
  </div>
</div>

<script>
$(".itemFocus").on("click", function(){
    var getDataJSON = $(this).data("json");
    
    $(".stokenid").html(getDataJSON.tokenId);
    $(".tranferid, .marketsell").attr("data-tokenid",getDataJSON.tokenId);

    $(".sname").html(getDataJSON.CarName);
    $(".sLever").html(getDataJSON.Lever);
    $(".sModels").html(getDataJSON.Models);
    $(".sPower").html(getDataJSON.Power);
    $(".sSpeed").html(getDataJSON.Speed);
    $(".sAcceleraction").html(getDataJSON.Acceleraction);
    $(".sHanding").html(getDataJSON.Handing);
    $(".sNitro").html(getDataJSON.Nitro);
    $(".sExp").html(getDataJSON.Exp);
    $("#fImage").attr("src",getDataJSON.Image);

});

$(".itemFocusCars").on("click", function(){
	var src = $(this).attr("src");
	var tokenid = $(this).data("tokenid");
	var contract = $(this).data("contract");
	$("#carslibs2").html('<img src="'+src+'" class="img-fluid" data-tokenid="'+tokenid+'"/>');
	$("#ExpLibsCars").modal('hide');
	$("#FocusCarUpID").html("ID : "+tokenid);
	//$(".modal-backdrop").remove();
});

$(".itemFocusExp").on("click", function(){
	var src = $(this).attr("src");
	var tokenid = $(this).data("tokenid");
	$("#exptoken3").html('<img src="'+src+'" class="img-fluid" data-tokenid="'+tokenid+'"/>');
	$("#ExpLibsItems").modal('hide');
	//$(".modal-backdrop").remove();
});



$('#sellItemsCars').on('show.bs.modal', function (event) {
  var button = $(event.relatedTarget) 
  var recipient = button.data('tokenid')
  var modal = $(this);
  modal.find('.modal-title').html('Sell NFT CAR | #ID : '+recipient);
  modal.find('.modal-footer button.marketsell').attr("data-tokenid",recipient)
});

$('#transferWallet').on('show.bs.modal', function (event) {
  var button = $(event.relatedTarget) 
  var recipient = button.data('tokenid')
  var modal = $(this)
  modal.find('.modal-title').html('NFT Transfer | #ID : '+recipient);
  modal.find('.modal-footer button.confirmtranfer').attr("data-tokenid",recipient)
});

$(document).ready(function() {
    

  });
</script>
