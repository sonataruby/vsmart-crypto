<h1 class="title title-s2 text-white">MarketPlace Battlet</h1>
<div class="card" style="max-width:650px;">
<div class="card-body">
<div class="row" id="LoadItem"></div>
</div>
</div>


<script>
$(document).ready(async function(){
    
    var LoadClass = async function(){
    await SmartApps.tokenGame1.Init();
        var html = '';
        var data = await SmartApps.tokenGame1.getMarketPlate(6);
        for(var i =0;i<data.length;i++){
          var img = data[i].class;
          var bullet = data[i].bullet;
          var price = data[i].price;
          html += '<div class="col-md-4 mb-3"><div class="card"><div class="card-body"><img src="/nfts/'+img+'.png" style="width:100px;"><br>1 NFT<br>'+bullet+' Bullet<br>'+price+' <%=token.name%><br><button class="btn btn-sm btn-outline-info btnMint" data-id="'+i+'">BUY</button> </div></div></div>';
        }
        

        $("#LoadItem").html(html);
    };
    await LoadClass();

    $(".btnMint").on("click", function(){
      var id = $(this).data("id");
      SmartApps.tokenGame1.buyMarketPlate(id);
  	});

    
  	

  	
});


</script>