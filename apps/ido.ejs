<%- include("./components/banner-pages.ejs",{name : "IDO Program", "description" : "Share you link and get reward 10%"}) %>
<div class="bg-white">
<section class="bg-white border-bottom tokenInfo" style="margin-bottom:30px; padding-top:15px; padding-bottom:15px;">
    <div class="container">
    	<h4><%= token.name %> IDO Infomation</h4>
        <div class="nk-block nk-block-token">
            <div class="row align-items-center justify-content-between gutter-vr-30px">
                <div class="col-lg-6">
                    <div class="row gutter-vr-30px">
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">Start</h6>
                                <p class="timestart"><%= token.ido_start%> (9:00AM GMT)</p>
                            </div>
                        </div><!-- .col  -->
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">Number of tokens for sale</h6>
                                <p><span class="totalSub"></span> <%- token.name%> (<%= token.presell_rate%>)</p>
                            </div>
                        </div><!-- .col  -->
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">End</h6>
                                <p class="timeend"><%= token.ido_end%> (11:00AM GMT)</p>
                            </div>
                        </div><!-- .col  -->
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">Tokens exchange rate</h6>
                                <p>1 <%- token.name%> = <span class="price"></span></p>
                            </div>
                        </div><!-- .col  -->
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">Acceptable currencies</h6>
                                <p>BNB</p>
                            </div>
                        </div><!-- .col  -->
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">Minimal transaction</h6>
                                <p class="minpay"><%= token.ido_min%> BNB</p>
                            </div>
                        </div><!-- .col  -->
                    </div><!-- .row  -->
                </div>
                <div class="col-lg-5">
                    <div class="token-status token-status-s5 bg-light-alt round no-bd">
                        <div class="token-box token-box-s3">
                            <div class="countdown-s3 countdown-s4 countdown" data-date=""><span class="timeCoundown"></span></div>
                        </div>
                        <div class="token-action">
                            <a class="btn btn-md btn-round btn-grad" href="https://bscscan.com/token/<%= token.contract %>">Token Contracts</a>
                            <a class="btn btn-md btn-round icon-metamask" data-address="<%= token.contract%>" data-symbol="<%= token.name%>" data-dec="18" data-logo= "<%= base %>/assets/ico/favicon.ico" data-web3=addwatch>Metamask</a>
                        </div>
                        <ul class="icon-list">
                            <li><em class="fab fa-bitcoin"></em></li>
                            <li><em class="fas fa-won-sign"></em></li>
                            <li><em class="fab fa-cc-visa"></em></li>
                            <li><em class="fab fa-cc-mastercard"></em></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- .block @e -->
    </div>
</section>


<section class="bg-white" style="padding-top:30px; padding-bottom:30px;">
	<div class="container">
		<div class="row">
			<div class="col-md-5 col-12">
				<img src="/images/dark/gfx-d-dark.png">
			</div>
			<div class="col-md-7 col-12">
				<div>
				<h3>IDO Ends In: <div id="getting-started"></div></h3>
				
				</div>
				<br>
				<b>Send link ref get free 10% <%= token.name %></b>
				<div class="input-group mb-3 input-group-lg">
				  <input type="text" class="form-control" readonly id="LinkRef" placeholder="Link Ref" aria-describedby="basic-addon2">
				  <div class="input-group-append">
				    <button class="input-group-text bg-primary text-white btn-with-icon" id="basic-addon2" onClick="CopyClip('LinkRef')">Copy Link</button>
				  </div>
				</div>
			</div>
		</div>
		
	</div>
</section>
<style>
	#getting-started span{
	font-size:48px;
	}
</style>

<script type="text/javascript">
	$(".timeCoundown").bind('DOMSubtreeModified', function(){
		$(".countdown").attr("data-date",$(".timeCoundown").text());
		$("#getting-started").html($(".timeCoundown").text());
		SmartApps.Plugins.countdown();
	});
  
</script>


<section class="bg-white" style="padding-top:30px; padding-bottom:30px;">
<div class="container">
	
	<div class="row">
		<div class="col-md-6 col-12">
		<div class="card border">
			<h4>IDO </h4>
			<div>1 <%= token.name %> = <span class="pricebnb"></span></div>
			<div class="">
				<div class="htmlerror"></div>
				
				  <div class="form-group">
				    <label for="exampleInputPassword1">Amount Min amount: <%= token.ido_min%> BNB | Max amount: <%= token.ido_max%> BNB</label>
				    <input type="text" value="0.05" class="form-control" id="getAmountBNB">
				  </div>
				  
				<button type="button" data-web3="ido" class="btn btn-primary">Buy Token</button>
			  
				
			</div>
		</div>
		</div>

		<div class="col-md-6 col-12">
			<div class="card border">
				<h4>Claim</h4>
				<p>Claim more token when first buy <%= token.name%></p>
				<p>Claim when you share link</p>
				<button class="btn btn-primary" data-web3="claim">Claim Get Free Coin</button>
				
			</div>
		</div>
	</div>
</div>
</section>

